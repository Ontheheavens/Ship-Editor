<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="oth.shipeditor.components.logging">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{1} - %msg%n" />
        </Console>
        <TextAreaAppender name="TextAreaAppender">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{1} - %msg%n" />
        </TextAreaAppender>
    </Appenders>

    <Loggers>
        <Root level="trace">
            <AppenderRef ref="console" />
            <AppenderRef ref="TextAreaAppender" />
        </Root>
    </Loggers>
</Configuration>
